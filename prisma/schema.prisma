generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(cuid()) @map("user_pk") @db.Char(36)
  username          String   @map("user_username") @db.VarChar(20)
  password          String?  @map("user_password") @db.VarChar(255)
  email             String   @unique @map("user_email") @db.VarChar(50)
  role              String   @map("user_role") @db.VarChar(20)
  createdAt         Int      @map("user_created_at")
  updatedAt         Int      @map("user_updated_at")
  deletedAt         Int      @default(0) @map("user_deleted_at")
  auth0Id           String?  @unique @map("user_auth0_id") @db.VarChar(255)
  verifiedAt        Int      @default(0) @map("user_verified_at")
  isVerified        Boolean  @default(false) @map("user_is_verified")
  verificationToken String?  @map("user_verification_token") @db.VarChar(255)
  reports           Report[]

  @@index([auth0Id])
  @@map("user")
}

model Report {
  id        String  @id @default(cuid()) @map("report_pk") @db.Char(36)
  name      String  @map("report_name") @db.VarChar(255)
  url       String  @map("report_url") @db.VarChar(255)
  createdAt Int     @map("report_created_at")
  updatedAt Int     @map("report_updated_at")
  userId    String? @db.Char(36)
  user      User?   @relation(fields: [userId], references: [id])

  @@index([userId], map: "report_userId_fkey")
  @@map("report")
}

model TogglTime {
  id              String @id @default(cuid()) @map("toggl_time_pk") @db.Char(36)
  togglEntryId    BigInt @unique @map("toggl_time_entry_id")
  linearTasksId   String @map("toggl_time_linear_tasks_fk") @db.VarChar(50)
  duration        Int    @map("toggl_time_duration")
  start           String @map("toggl_time_start") @db.VarChar(255)
  stop            String @map("toggl_time_stop") @db.VarChar(255)
  description     String @map("toggl_time_description") @db.VarChar(255)
  createdAt       Int    @map("toggl_time_created_at")
  updatedAt       Int    @map("toggl_time_updated_at")

  linearTask LinearTask @relation(fields: [linearTasksId], references: [taskId])

  @@index([linearTasksId])
  @@index([start])
  @@map("toggl_time")
}

model LinearTask {
  id            String  @id @default(cuid()) @map("linear_tasks_pk") @db.Char(36)
  taskId        String  @unique @map("linear_tasks_task_id") @db.VarChar(50)
  name          String  @map("linear_tasks_name") @db.VarChar(255)
  estimatedTime String  @default("") @map("linear_tasks_estimated_time") @db.VarChar(50)
  delegateId    String? @map("linear_tasks_delegate_id") @db.VarChar(255)
  delegateName  String? @map("linear_tasks_delegate_name") @db.VarChar(255)
  projectName   String? @map("linear_tasks_project_name") @db.VarChar(255)
  startedAt     Int?    @map("linear_tasks_started_at")
  completedAt   Int?    @map("linear_tasks_completed_at")
  createdAt     Int     @map("linear_tasks_created_at")
  updatedAt     Int     @map("linear_tasks_updated_at")

  togglTimes TogglTime[]
  labels     LinearTaskLabel[]

  @@index([createdAt])
  @@index([startedAt])
  @@index([completedAt])
  @@index([updatedAt])
  @@index([delegateId])
  @@map("linear_tasks")
}

model LinearLabel {
  id        String @id @default(cuid()) @map("linear_labels_pk") @db.Char(36)
  name      String @unique @map("linear_labels_name") @db.VarChar(255)
  createdAt Int    @map("linear_labels_created_at")
  updatedAt Int    @map("linear_labels_updated_at")

  tasks LinearTaskLabel[]

  @@map("linear_labels")
}

model LinearTaskLabel {
  linearTaskId  String      @map("linear_task_label_linear_tasks_fk") @db.Char(36)
  linearLabelId String      @map("linear_task_label_linear_labels_fk") @db.Char(36)
  linearLabel   LinearLabel @relation(fields: [linearLabelId], references: [id])
  linearTask    LinearTask  @relation(fields: [linearTaskId], references: [id])

  @@id([linearTaskId, linearLabelId])
  @@index([linearLabelId], map: "linear_task_label_linear_task_label_linear_labels_fk_fkey")
  @@map("linear_task_label")
}

model TogglDeveloper {
  id        String  @id @default(cuid()) @map("toggl_developer_pk") @db.Char(36)
  togglId   Int     @unique @map("toggl_developer_toggl_id")
  name      String  @map("toggl_developer_name") @db.VarChar(255)
  email     String  @unique @map("toggl_developer_email") @db.VarChar(255)
  isActive  Boolean @default(true) @map("toggl_developer_is_active")
  createdAt Int     @map("toggl_developer_created_at")
  updatedAt Int     @map("toggl_developer_updated_at")

  @@map("toggl_developer")
}
